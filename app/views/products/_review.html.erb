<article class="review">

  <% user = User.find r.user_id %>
    <dt>Reviewer</dt>
    <dd><%= user.name %></dd>
    <dt>Rating</dt>
    <dd><%= r.rating %>/5</dd>
    <dt>Comment</dt>
    <dd><%= r.description%></dd>
    <br>

    <% if current_user %>
      <% if current_user.email == user.email %>
        <dt><%= link_to 'Delete', product_path(@product),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></dt>
      <% end %>
    <% end %>
        <dd> </dd>
</article>

