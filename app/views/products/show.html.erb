<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>

          <hr>

  <div>
  <% review = Review.where(product_id: @product.id).reverse_order %>
    <% review.each do |r| %>
    <%= render 'review', r: r %>
    <% end %>
  </div>

          <hr>

<div>
  <% if current_user %>
    <h4>Add a Review</h4>
    <%= render 'products/form' %>
  <% end %>
</div>


        </dl>
      </div>
    </div>




  </article>

</section>
